<h1 class='center'> <%= @journey.title %> </h1>
<% if false %>
<table>
  <tr>
    <th> Link </th>
    <th> Key </th>
    <th> Value </th>
  </tr>
  <% @journey.stops.each do |stop| %>
    <tr>
      <td> <%= link_to stop.title, journey_stop_path(@journey, stop) %> </td>
      <td> Journey ID </td>
      <td> <%= stop.journey_id %> </td>
    </tr>
    <tr>
      <td> - </td>
      <td> Title </td>
      <td> <%= stop.title %> </td>
    </tr>
    <tr>
      <td> - </td>
      <td> Latitude </td>
      <td> <%= stop.latitude %> </td>
    </tr>
    <tr>
      <td> - </td>
      <td> Longitude </td>
      <td> <%= stop.longitude %></td>
    </tr>
    <tr>
      <td> - </td>
      <td> Content </td>
      <td> <%= stop.content %> </td>
    </tr>
  <% end %>
</table>
<% end %>
<%= link_to "New Stop", new_journey_stop_path(@journey) %>
