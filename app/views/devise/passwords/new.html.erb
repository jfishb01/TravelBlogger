<script>
  $(document).ready(function() {
    $('body').addClass('map-bg')
  });
</script>



<div class='form-box'>
  <div class='form-content'>
    <div class="form-hdr">
      <div class='cancel-btn'>
        <p onclick="history.back()"> x </p>
      </div>
      <h2 class='center'>Forgot Your Password?</h2>
    </div>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

      <br/>
      <br/>

      <div id='sign-in-form-content'>
        <% if @user.errors[:email].blank? %>
          <p> Email </p>
        <% else %>
          <p class="form-error">
            <i>Email
            <%= @user.errors[:email].first %></i>
          </p>
        <% end %>
        <%= f.email_field :email, :autofocus => true %>

        <br/>
        <br/>
        <br/>
      </div>

      <div class='center'>
        <div><%= f.submit "Send Me Reset Password Instructions", class: "btn-black", onclick: "localStorage.setItem('profile_tab', 'visible');" %>
        </div>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>

