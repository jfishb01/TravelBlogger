<script>
  $(document).ready(function() {
    $('body').addClass('map-bg')
  });
</script>



<div class='form-box'>
  <div class='form-content'>
    <div class="form-hdr">
      <div class='cancel-btn'>
        <%= link_to "x", root_url, class: 'cancel-btn' %>
      </div>
      <h2 class='center'>Sign in</h2>
    </div>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <br/>
      <br/>

      <div id='sign-in-form-content'>
        <% if @user.errors[:email].blank? %>
          <p> Email </p>
        <% else %>
          <p class="form-error">
            <i>Email
            <%= @user.errors[:email].first %></i>
          </p>
        <% end %>
        <%= f.text_field :email, :autofocus => true %>

        <br/>
        <br/>

        <% if @user.errors[:password].blank? %>
          <p> Password </p>
        <% else %>
          <p class="form-error">
            <i>Password
            <%= @user.errors[:password].first %></i>
          </p>
        <% end %>
        <%= f.password_field :password %>

        <br/>

        <% if devise_mapping.rememberable? -%>
          <label class="checkbox inline" ><%= f.check_box :remember_me %>Remember me</label>
        <% end -%>

        <br/>
        <br/>
        <br/>
      </div>

      <div class='center'>
        <div><%= f.submit "Sign in", class: "btn-black", onclick: "localStorage.setItem('profile_tab', 'visible');" %>
        </div>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>

