<header class="navbar navbar-fixed-top" role="navigation">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "journey", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to "Profile", root_path, class: "header_links" %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, method:
              :delete, class: "header_links" %></li>
          <% else %>
            <% if request.original_url != root_url %>
              <li><%= link_to "Register", new_user_registration_path, class:
                "header_links" %></li>
            <% end %>
            <li><%= link_to "Sign in", new_user_session_path, class:
              "header_links" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
